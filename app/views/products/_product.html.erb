<% @products.each do |product| %>
    <div class="col-sm">
    <a href="#"><h1><%= product.name %></h1></a>
      <%= image_tag(product.image_url, class: "img-fluid") if product.image_url %>
      <p><%= product.description %></p>
      <p><%= product.colour %></p>
      <p><%= product.price %></p>
      <p><%= link_to 'Show', product %></p>
      <p><%= link_to 'Edit', edit_product_path(product) %></p>
      <p><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
    </div><!-- /col -->
  <% end %>